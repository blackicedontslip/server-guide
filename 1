#include <bits/stdc++.h>
int findMinDiff(int arr[], int n) 
{ 
   // Initialize difference as infinite 
   int diff = INT_MAX; 
  
   // Find the min diff by comparing difference 
   // of all possible pairs in given array 
   for (int i=0; i<n-1; i++) 
      for (int j=i+1; j<n; j++) 
          if (abs(arr[i] - arr[j]) < diff) 
                diff = abs(arr[i] - arr[j]); 
  
   // Return min diff 
   return diff; 
}
